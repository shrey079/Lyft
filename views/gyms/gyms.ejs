<% layout('layouts/boilerplate')%>
<h1>All gyms</h1>

<p><a href="/gyms/new">Add a new Gym</a></p>

<% for(let gym of gyms) { %> 
    <div class="card" mb-3> 
        <div class="row">
            <div class="col-med-4">
                <img class="img-fluid" src="<%=gym.image%>" >
            </div>
            <div class="col-med-8">
                <div class="card-body">
                    <h5 class="card-title"> <%= gym.title %> </h5>
                    <p class="card-text"> <%= gym.description %> </p>
                    <p class="card-text"> 
                        <small class="text-muted"> <%= gym.location %> </small>
                    </p>
                    <a class="btn btn-primary" href="/gyms/<%= gym._id %>">Learn more</a>
                </div>
            </div>
        </div>
    </div>
<% } %> 


